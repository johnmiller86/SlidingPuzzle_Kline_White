<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainMenuFragment"
    android:id="@+id/fragment_main_menu">

        <Button
            android:id="@+id/button_leaderboards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leaderboards"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/button_settings"
            android:layout_alignParentStart="true"
            android:background="@drawable/button" />

        <Button
            android:id="@+id/button_freeplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/free_play"
            android:background="@drawable/button"
            android:layout_above="@+id/button_settings"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="51dp"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:id="@+id/button_settings"
            android:background="@drawable/button"
            android:layout_above="@+id/button_leaderboards"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="54dp"
            android:layout_alignParentEnd="true" />

    <Button
            android:id="@+id/button_campaign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/campaign"
            android:background="@drawable/button"
            android:layout_marginBottom="71dp"
            android:layout_above="@+id/button_freeplay"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoTextView"
        android:textAlignment="center"
        android:textSize="36sp"
        android:background="@drawable/gradient"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
